<component>

	<gradients>
		<horizontal name="grad1" >
			<stop color="0xfb9538" frac="30%" opa="100%"/>
			<stop color="0xfbc638" frac="200" opa="100%"/>
		</horizontal>
	</gradients>

	<consts>
		<px name="size" value="100%"/>
	</consts>

	<api>
		<prop name="title" type="string" default="No title"/>
		<prop name="action" type="string" default="No action"/>
		<prop name="bg_color" type="color" default="0xcccccc"/>
		<prop name="btn_rel_style" type="style" />
		<prop name="btn_pr_style" type="style" />
	</api>

	<styles>
		<style name="gray" bg_grad="grad1"/>
		<style name="blue" bg_color="0x0000ff"/>
	</styles>


    <animations>
        <timeline name="shake">
            <animation prop="translate_x" target="label" start="-10" end="0" duration="200" repeat_count="5" reverse_duration="1000"/>
            <animation prop="translate_y" target="button" start="-20" end="0" duration="200" repeat_count="5" reverse_duration="1000"/>
        </timeline>
    </animations>

	<view extends="lv_obj" style_radius="3" width="#size" height="content" style_bg_color="$bg_color" >
        <style name="gray"/>
		<lv_label name="label" text-translated="$title" align="left_mid"/>
		<my_button name="button" btn_text="$action" align="right_mid">
            <style name="$btn_rel_style"/>
            <style name="$btn_pr_style" selector="pressed"/>
            <play_animation_event target="self" timeline="shake" trigger="long_pressed"/>
        </my_button>
	</view>
</component>
